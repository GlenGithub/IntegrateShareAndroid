<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:maxHeight="54dp"
        android:maxWidth="54dp"
        android:paddingBottom="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_bg_s" />

    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/ivAlbum" >

        <TextView
            android:id="@+id/musicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:hint="musicName"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/musicName"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:hint="singerName" />

        <TextView
            android:id="@+id/isdownLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_alignBottom="@id/singer"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:hint="未下载" />
    </RelativeLayout>

</RelativeLayout>